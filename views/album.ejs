<h1 class="album-title"><%= name ;%></h1>

<% if (!isRoot){ %>
    <nav class="breadcrumb">
        <% for (var i = 0; i < breadcrumb.length; i++) { %>
            <% if (i === breadcrumb.length - 1){ %>
                <span><%= breadcrumb[i].name; %></span>
            <% }else{ %>
                <a href="/<%= breadcrumb[i].url; %>"> <%= breadcrumb[i].name; %></a><span> &raquo; </span>
            <% } %>
        <% } %>
    </nav>
<% } %>

<% if (albums.length > 0){ %>
    <h2>Albums</h2>
    <ul class="albums">
        <%
        albums.forEach(function(album){
            var albumURL = album.url.replace(/#/g, '%23');
        %>
            <li class="thumb">
                <a href="/<%= albumURL ;%>">
                    <figure>
                        <img src="/<%= albumURL ;%>?tn=1" alt="<%= album.name ;%>" />
                        <figcaption><%= album.name ;%></figcaption>
                    </figure>
                </a>
            </li>
        <% }); %>
    </ul>
<% } %>

<% if (photos.length > 0){ %>
    <h2>Photos</h2>
    <ul class="photos">
        <% photos.forEach(function(photo){ %>
            <li class="thumb">
                <a href="/<%= photo.url ;%>">
                    <figure>
                        <img src="/<%= photo.src ;%>?tn=1" alt="<%= photo.name ;%>" />
                        <figcaption><%= photo.friendlyName ;%></figcaption>
                    </figure>
                </a>
            </li>
        <% }); %>
    </ul>
<% } %>
